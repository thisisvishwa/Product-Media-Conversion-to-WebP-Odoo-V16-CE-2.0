<odoo>
    <data>

        <!-- Inherit the res.config.settings view to add WebP conversion settings -->
        <record id="view_res_config_settings_form_webp" model="ir.ui.view">
            <field name="name">res.config.settings.form.webp.conversion</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='settings']" position="inside">
                    <div class="app_settings_block" data-string="Product Media Conversion Settings" string="Product Media Conversion Settings">
                        <h2>WebP Conversion Settings</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="webp_conversion_enabled"/>
                                    <field name="webp_conversion_enabled"/>
                                    <div class="text-muted">
                                        Enable automatic conversion of product images to WebP format.
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('webp_conversion_enabled', '=', False)]}">
                                <div class="o_setting_right_pane">
                                    <label for="webp_conversion_quality"/>
                                    <field name="webp_conversion_quality" class="oe_inline"/>
                                    <div class="text-muted">
                                        Set the quality level for WebP image conversion (0-100).
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('webp_conversion_enabled', '=', False)]}">
                                <div class="o_setting_right_pane">
                                    <label for="webp_conversion_optimization"/>
                                    <field name="webp_conversion_optimization" class="oe_inline"/>
                                    <div class="text-muted">
                                        Choose the optimization level for WebP image conversion.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>